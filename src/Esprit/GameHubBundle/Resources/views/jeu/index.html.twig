  {% block body %}
      <br><br><br>
      <div class="col-md-12">
          <div class="portlet light">
              <div class="portlet-title">
                  <div class="caption">
                      <i class="icon-paper-plane font-yellow-casablanca"></i>
                      <span class="caption-subject bold font-yellow-casablanca uppercase">list des Jeu</span>
                      <span class="caption-helper"></span>
                  </div>
                  <div class="inputs">
                      <a href="{{ path('jeu_new') }}" class="btn btn-circle btn-sm default">Creation d'un nouveau jeu </a>
                  </div>

                  <div class="inputs">
                      <form class="form-inline margin-bottom-40" role="form"  action="" method="POST">
                          <div class="form-group form-md-line-input has-success">
                              <input type="text" class="form-control" id="title" placeholder="rechercher" name="title">

                          </div>


                          <button type="submit" class="btn btn-warning" id="recherche">Recherche</button>
                      </form>












                  </div>
              </div>
              {% for jeu in jeus %}
                  <div class="portlet light">
                      <!-- BEGIN Portlet PORTLET-->
                      <div class="row">
                          <div class="list-group">
                              <div class="media col-md-3">
                                  <figure class="pull-left">
                                      <img class="media-object img-rounded img-responsive"  src="{{ asset(vich_uploader_asset(jeu, 'imageFile')) }}" alt="{{ jeu.imageName }}" >
                                  </figure>
                              </div>
                          </div>
                          <div class="list-group"> <div class="form-body">
                                  <div class="media col-md-6">
                                      <table class="table table-striped table-hover">
                                          <thead>
                                          <tr>
                                              <th>nom</th>
                                              <th>categorie</th>
                                              <th>prix</th>
                                          </tr>
                                          </thead>
                                          <tbody>
                                          <tr>
                                              <td><span class="badge badge-danger">{{ jeu.nom }}</span></td>
                                              <td><span class="badge badge-danger">{{ jeu.categorie }}</span></td>
                                              <td><span class="badge badge-danger">{{ jeu.prix }}</span></td>
                                          </tr>
                                          </tbody>
                                      </table>
                                      <div class="form-body">
                                          <label class="control-label col-md-3">Description </label>
                                          <div class="col-md-9">
                                              <p>{{ jeu.description }}</p>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                          </div>
                          <div class=" col-md-3">
                              <a id="dude" href="{{ path('jeu_show', { 'id': jeu.id }) }} "  value="{{ jeu.id }}" class="btn default" > show
                                  <i class="fa fa-user"></i></a>
                              <br>
                              <br>
                              {% if is_granted('ROLE_ADMIN')  %}
                              <a href="{{ path('jeu_edit', { 'id': jeu.id }) }}" class="btn default">modification <i class="fa fa-user"></i></a>
                              {% endif %}
                              <br>
                              <br>
                          </div>
                      </div>
                  </div>




