{% extends 'base.html.twig' %}
        {% block bgbody %}
            body{
            background-image: url({{ asset("images/adminrec.jpg") }});

            padding-top: 50px;
            }
        {% endblock %}
{% block stylesheets %}
<script src="{{ asset('http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')}}" type="text/javascript"></script>

<script src="{{ asset('//code.highcharts.com/4.1.8/highcharts.js')}}"></script>
<script src="{{ asset('//code.highcharts.com/4.1.8/modules/exporting.js')}}"></script>
<script type="text/javascript">
    {{ chart(chart) }}
</script>
{% endblock %}
{% block body %}
    <br><br><br><br><br><br><br><br><br>
    <h1> Liste des r√©clamations</h1>
    <div id="linechart" style="min-width: 400px; height: 400px; margin: 0 auto"></div>
{% for reclamation in reclamations %}
<div  class="well" style="filter:alpha(opacity=50); opacity:0.8;">


    <div class="form-group">
        <a href="{{ path('reclamation_show', { 'id': reclamation.id }) }}">{{ reclamation.id }}</a>
        <div class="col-sm-4">
            <strong> id :</strong>
        </div>
    </div>

    <div class="form-group">
        {{ reclamation.contenu }}
        <div class="col-sm-4">
            <strong>   Contenu :</strong>
        </div>
    </div>
    <div class="form-group">
        {{ reclamation.membre }}
        <div class="col-sm-4">
            <strong>     Membre :</strong>
        </div>
    </div>
    <div class="form-group">
        {% if reclamation.vu %}Yes{% else %}No{% endif %}
        <div class="col-sm-4">
            <strong>     Vu :</strong>
        </div>
    </div>




    <a href="{{ path('reclamation_show',{ 'id': reclamation.id }) }} " class="btn btn-default">
        <span class="glyphicon glyphicon-log-in"></span> Acceder
    </a>
    <a href="{{ path('reclamation_delete',{ 'id': reclamation.id }) }} " class="btn btn-danger">
        <span class="glyphicon glyphicon-trash"></span> Supprimer
    </a>


</div>
<br>
        {% endfor %}


{% endblock %}
