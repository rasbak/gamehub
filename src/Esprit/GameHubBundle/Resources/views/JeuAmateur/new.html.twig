{% extends 'base.html.twig' %}
        {% block bgbody %}
            body{
            background-image: url({{ asset("images/new.jpg") }});

            padding-top: 50px;
            }
        {% endblock %}
{% block body %}
    <h1><img src="{{ asset('images/ajout.png') }}">  Ajout jeu amateur</h1>

    <div class="well" style="filter:alpha(opacity=50); opacity:0.8;">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {# Les erreurs générales du formulaire. #}
        {{ form_errors(form) }}

        <div class="form-group">
            {{ form_label(form.nom, "Nom : ", {'label_attr': {'class': 'col-sm-3  control-label'}}) }}

            {{ form_errors(form.nom) }}

            <div class="col-sm-4">
                {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.description, "Description : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.description) }}

            <div class="col-sm-4">
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.categorie, "Categorie : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.categorie) }}

            <div class="col-sm-4">
                {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


        <div class="form-group">
            {{ form_label(form.lien, "Lien : ", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.lien) }}

            <div class="col-sm-4">
                {{ form_widget(form.lien, {'attr': {'class': 'form-control'}}) }}
                ce champ doit spécifier un lien google drive public où se trouve votre jeu.
                non encore uploader? <span class="glyphicon glyphicon glyphicon-new-window"></span>
                <a href="{{ asset('https://www.google.com/intl/fr_ALL/drive/') }}" target="_blank">redirection google drive</a>

            </div>
        </div>
        <div class="form-group" align="middle">
            <button type="submit"  class="btn btn-default"><span class="glyphicon glyphicon-floppy-disk"></span>  Ajouter</button>
        </div>

        {{ form_rest(form) }}

        {# Fermeture de la balise <form> du formulaire HTML #}
        {{ form_end(form) }}
    </div>

    <ul>

    </ul>


            <a href="{{ path('jeuamateur_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-circle-arrow-left"></span> Retour à la liste
            </a>
<br><br><br><br><br>


{% endblock %}
