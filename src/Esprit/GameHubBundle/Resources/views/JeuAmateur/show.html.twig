{% extends 'base.html.twig' %}
        {% block bgbody %}
            body{
            background-image: url({{ asset("images/luffy.jpg") }});

            padding-top: 50px;
            }
        {% endblock %}
{% block body %}
    <h1><img src="{{ asset('images/manette21.png') }}">    Jeux amateur    </h1>
<br>

    <div class="container">
        <div class="modal fade" id="effacerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">x</button>
                        <h4 class="modal-title">Effacer ce jeu ?</h4>
                    </div>
                    <div class="modal-body">
                        <div align="middle">
                            {{ form_start(delete_form, {'attr': {'class': 'form-horizontal'}}) }}
                            {{ form_errors(delete_form) }}
                            <button class="btn btn-default" data-dismiss="modal">Annuler</button>
                            <button type="Effacer" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Effacer</button>
                            {{ form_end(delete_form) }}
                            <span id="loadereffacdem{{ jeuAmateur.id }}" style="display: none;"><img src="{{ asset('images/loader.gif') }}" alt="loading" /></span></div>
                    </div>

                </div>
            </div>
        </div>
        <h1> <img src="{{ asset('images/gamepad.png') }}">        {{ jeuAmateur.nom }}</h1>
<div  class="well" style="filter:alpha(opacity=50); opacity:0.8;">


    <div class="form-group">
        {{ jeuAmateur.description }}
        <div class="col-sm-4">
     <strong> Description :</strong>
        </div>
    </div>

    <div class="form-group">
        {{ jeuAmateur.categorie }}
        <div class="col-sm-4">
            <strong>   Categorie :</strong>
        </div>
    </div>
    <div class="form-group">
         {{ jeuAmateur.membre }}
        <div class="col-sm-4">
            <strong>     Membre :</strong>
        </div>
    </div>
    <div class="form-group">
        <a href=""> {{ jeuAmateur.lien }}</a>

        <div class="col-sm-4">
            <strong>   Lien de téléchargement :</strong>
        </div>
    </div>










</div>



            <a href="{{ path('jeuamateur_index') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-circle-arrow-left"></span> Retour à la liste
            </a>

        {% if (membre.username==jeuAmateur.membre) or is_granted('ROLE_ADMIN') %}

            <a href="{{ path('jeuamateur_edit', { 'id': jeuAmateur.id }) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-pencil"></span> Modifier
            </a>
            <a href="#" data-toggle="modal" data-target="#effacerModal" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span> Effacer
            </a>
            {#{{ form(delete_form) }}#}
        {% endif %}
        </div>
<br><br><br><br><br>


{% endblock %}
