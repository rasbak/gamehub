{% extends 'base.html.twig' %}
        {% block bgbody %}
            body{
            background-image: url({{ asset("images/backgroundRegister2.png") }});

            padding-top: 50px;
            }
        {% endblock %}

{% block body %}
    <h1>Accessoire</h1>


    <div  class="well" style="filter:alpha(opacity=50); opacity:0.8;">


        <div class="form-group">
            {{ accessoire.nomProduit }}
            <div class="col-sm-4">
                <strong> Nom du accessoire :</strong>
            </div>
        </div>

        <div class="form-group">
            {{ accessoire.prixProduit }}
            <div class="col-sm-4">
                <strong>     Prix du Produit :</strong>
            </div>
        </div>

        <div class="form-group">
            {% if accessoire.dateSortie %}{{ accessoire.dateSortie|date('Y-m-d') }}{% endif %}
            <div class="col-sm-4">
                <strong>     Date :</strong>
            </div>
        </div>


        <div class="form-group">

            <a><img height="187" width="150" src='{{ asset("tsawer/"~ accessoire.longueur)}}' /></a>
            <div class="col-sm-4">
                <strong>     Image :</strong>
            </div>
        </div>

        <div class="form-group" >
            <a href="" id="type"> {{ accessoire.typeProduit }}</a>

            <div class="col-sm-4">
                <strong>     Type du accessoire :</strong>
            </div>
        </div>

        {% if accessoire.typeProduit =="Pc" %}
        <div id="PC" >

        <div class="form-group">
            <a href=""> {{ accessoire.processeurP }}</a>

            <div class="col-sm-4">
                <strong>   Processeur du pc :</strong>
            </div>
        </div>

        <div class="form-group">
            <a href=""> {{ accessoire.disqueDurP }}</a>

            <div class="col-sm-4">
                <strong>   Disque dur du pc :</strong>
            </div>
        </div>

        <div class="form-group">
            <a href=""> {{ accessoire.memoireP }}</a>

            <div class="col-sm-4">
                <strong>   Memoire du pc :</strong>
            </div>
        </div>

        <div class="form-group">
            <a href=""> {{ accessoire.carteGraphiqueP }}</a>

            <div class="col-sm-4">
                <strong>   Carte graphique du pc :</strong>
            </div>
        </div>

        </div>


        {% endif %}

        {% if accessoire.typeProduit =="Souris" %}
        <div id="Souris" >

            <div class="form-group">
            <a href=""> {{ accessoire.nomSouris }}</a>

            <div class="col-sm-4">
                <strong>   Nom de la souris :</strong>
            </div>
        </div>

                <div class="form-group">
                    <a href=""> {{ accessoire.poids }}</a>

                    <div class="col-sm-4">
                        <strong>   Poids :</strong>
                    </div>
                </div>

                <div class="form-group">
                    <a href=""> {{ accessoire.longueurCable }}</a>

                    <div class="col-sm-4">
                        <strong>   Longueur du cable :</strong>
                    </div>
                </div>

        </div>
        {% endif %}

        {% if accessoire.typeProduit =="Casque" %}
        <div id="Casque" >

        <div class="form-group">
            <a href=""> {{ accessoire.typeCasque }}</a>

            <div class="col-sm-4">
                <strong>   Type du casque :</strong>
            </div>
        </div>

        <div class="form-group">
            <a href=""> {{ accessoire.systemAcoustique }}</a>

            <div class="col-sm-4">
                <strong>   System Acoustique :</strong>
            </div>
        </div>


            <div class="form-group">
                <a href=""> {{ accessoire.nomCasque }}</a>

                <div class="col-sm-4">
                    <strong>   Nom du casque :</strong>
                </div>
            </div>
        </div>

        {% endif %}

        {% if accessoire.typeProduit =="Clavier" %}

        <div id="Clavier" >

        <div class="form-group">
            <a href=""> {{ accessoire.nomClavier }}</a>

            <div class="col-sm-4">
                <strong>   Nom du clavier :</strong>
            </div>
        </div>


                <div class="form-group">
                    <a href=""> {{ accessoire.poids }}</a>

                    <div class="col-sm-4">
                        <strong>   Poids :</strong>
                    </div>
                </div>

                <div class="form-group">
                    <a href=""> {{ accessoire.longueurCable }}</a>

                    <div class="col-sm-4">
                        <strong>   Longueur du cable :</strong>
                    </div>
                </div>

        </div>
        {% endif %}
