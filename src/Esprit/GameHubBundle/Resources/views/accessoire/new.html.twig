    <script type="text/javascript">


      function selectionner() {
          var pc = document.getElementById("PC");
          var souris = document.getElementById("Souris");
          var Casque = document.getElementById("Casque");
          var Clavier = document.getElementById("Clavier");
          var commun = document.getElementById("commun");
          var cb = document.getElementById("esprit_gamehubbundle_accessoire_typeProduit");

          if (cb.value=="") {
              pc.style.display = "none";
              souris.style.display="none";
              Casque.style.display="none";
              commun.style.display = "none";
              Clavier.style.display="none"
          }
          if (cb.value=="Pc") {
              pc.style.display = "block";
              souris.style.display="none";
              Casque.style.display="none";
              commun.style.display = "none";
              Clavier.style.display="none"
          }
           if (cb.value=="Souris") {
              pc.style.display = "none";
              souris.style.display = "block";
              commun.style.display = "block";
              Casque.style.display = "none";
              Clavier.style.display = "none"
          }
           if (cb.value=="Casque") {
              pc.style.display = "none";
              souris.style.display = "none";
              Casque.style.display = "block";
              commun.style.display = "none";
              Clavier.style.display = "none"
          }
           if (cb.value=="Clavier") {
              pc.style.display = "none";
              souris.style.display="none";
              Casque.style.display="none";
              commun.style.display = "block";
              Clavier.style.display = "block";
          }
          
      }


    </script>

